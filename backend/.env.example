# =============================================
# OrangeLink Backend - Environment Variables
# =============================================
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://orangelink:orangelink_secret@localhost:5432/orangelink_db

# JWT Secrets (use strong random strings in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_min_32_chars_here
JWT_REFRESH_SECRET=your_refresh_secret_min_32_chars_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Redis for token blacklisting (recommended for production)
REDIS_URL=redis://localhost:6379

# Optional: Gemini AI for link/bio optimization
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend URL (for email links, CORS, etc.)
FRONTEND_URL=http://localhost:5173
